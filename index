    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";
        import { getAuth, signInAnonymously, signInWithCustomToken, onAuthStateChanged } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-auth.js";
        import { getFirestore, collection, addDoc, onSnapshot, query, doc, serverTimestamp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";

        /* ===========================================================
         武林秘籍：FIREBASE 配置區
         ===========================================================
         如果你要部署到自己的 Vercel/Netlify，請將下方內容替換。
         取得方法：Firebase Console -> 項目設定 -> 你的應用程式 -> SDK 設定
         ===========================================================
        */
        const mySecretFirebaseConfig = {
            apiKey: "AIzaSyD0vTp277dpLVN36kFL7nt_pkjCMkehlS4",
  authDomain: "manhua-accounting.firebaseapp.com",
  projectId: "manhua-accounting",
  storageBucket: "manhua-accounting.firebasestorage.app",
  messagingSenderId: "177698626189",
  appId: "1:177698626189:web:cca7c755a75408274b60c4
        };
        // =========================================================

        const firebaseConfig = typeof __firebase_config !== 'undefined' 
            ? JSON.parse(__firebase_config) 
            : mySecretFirebaseConfig;

        const appId = typeof __app_id !== 'undefined' ? __app_id : 'fin-track-manhua';

        // PWA Setup
        const setupPWA = () => {
            try {
                const manifest = {
                    name: "絕世帳簿 - 港漫 AI 記帳",
                    short_name: "絕世帳簿",
                    start_url: ".",
                    display: "standalone",
                    background_color: "#1a1a1a",
                    theme_color: "#cc0000",
                    icons: [{
                        src: "https://cdn-icons-png.flaticon.com/512/3062/3062634.png",
                        sizes: "512x512",
                        type: "image/png"
                    }]
                };
                const manifestBlob = new Blob([JSON.stringify(manifest)], {type: 'application/json'});
                document.getElementById('manifest-link').setAttribute('href', URL.createObjectURL(manifestBlob));

                if ('serviceWorker' in navigator) {
                    const swCode = `self.addEventListener('install', e => self.skipWaiting()); self.addEventListener('fetch', e => e.respondWith(fetch(e.request)));`;
                    const swUrl = URL.createObjectURL(new Blob([swCode], {type: 'application/javascript'}));
                    navigator.serviceWorker.register(swUrl).catch(err => console.warn('SW Register Error:', err));
                }
            } catch (err) { console.error('PWA Setup Error:', err); }

            let deferredPrompt;
            window.addEventListener('beforeinstallprompt', (e) => {
                e.preventDefault();
                deferredPrompt = e;
                document.getElementById('pwa-install-btn')?.classList.remove('hidden');
            });
            document.getElementById('pwa-install-btn')?.addEventListener('click', async () => {
                if (deferredPrompt) {
                    deferredPrompt.prompt();
                    deferredPrompt = null;
                }
            });
        };
        setupPWA();

        // Init Firebase
        const app = initializeApp(firebaseConfig);
        const auth = getAuth(app);
        const db = getFirestore(app);

        let currentUser = null;

        // API KEY Persistence
        const getStoredApiKey = () => localStorage.getItem('GEMINI_API_KEY') || "";
        document.getElementById('api-key-input').value = getStoredApiKey();

        document.getElementById('save-key-btn').onclick = () => {
            const val = document.getElementById('api-key-input').value.trim();
            localStorage.setItem('GEMINI_API_KEY', val);
            triggerFX("成！");
        };

        function triggerFX(text) {
            const fx = document.getElementById('fx-text');
            fx.innerText = text;
            fx.style.display = 'block';
            fx.style.left = '40%'; fx.style.top = '40%';
            setTimeout(() => fx.style.display = 'none', 800);
        }

        const initAuth = async () => {
            try {
                if (typeof __initial_auth_token !== 'undefined' && __initial_auth_token) {
                    await signInWithCustomToken(auth, __initial_auth_token);
                } else { await signInAnonymously(auth); }
            } catch (err) { console.error("Auth Failed:", err); }
        };

        onAuthStateChanged(auth, (user) => {
            currentUser = user;
            if (user) {
                document.getElementById('user-id-suffix').innerText = user.uid.slice(-4).toUpperCase();
                startDataSync(user.uid);
            }
        });
        initAuth();

        function startDataSync(userId) {
            if (!userId) return;
            const transRef = collection(db, 'artifacts', appId, 'users', userId, 'transactions');
            onSnapshot(transRef, (snapshot) => {
                const data = [];
                snapshot.forEach(doc => data.push({ id: doc.id, ...doc.data() }));
                data.sort((a, b) => (b.timestamp?.seconds || 0) - (a.timestamp?.seconds || 0));
                updateUI(data);
            }, (err) => console.error("Firestore Error:", err));
        }

        function updateUI(transactions) {
            const list = document.getElementById('transaction-list');
            let inc = 0, exp = 0;
            if (transactions.length === 0) {
                list.innerHTML = `<div class="text-center py-10 opacity-30"><p class="brush-font text-lg">尚未有英雄紀錄</p></div>`;
            } else {
                list.innerHTML = transactions.map(t => {
                    const amt = parseFloat(t.amount);
                    if (amt > 0) inc += amt; else exp += Math.abs(amt);
                    const icons = { '餐飲': 'drumstick-bite', '交通': 'horse', '娛樂': 'theater-masks', '收入': 'dragon', '購物': 'gem' };
                    return `
                        <div class="manhua-card flex items-center gap-4 py-3 animate-fadeIn">
                            <div class="w-10 h-10 bg-black text-white flex items-center justify-center border-2 border-red-600 shadow-[2px_2px_0px_#cc0000]">
                                <i class="fas fa-${icons[t.category] || 'bolt'}"></i>
                            </div>
                            <div class="flex-1">
                                <p class="font-black text-sm uppercase">${t.title}</p>
                                <p class="text-[8px] font-bold text-slate-400 uppercase">${t.category}</p>
                            </div>
                            <span class="font-black brush-font ${amt > 0 ? 'text-green-600' : 'text-red-600'}">
                                ${amt > 0 ? '+' : ''}${amt.toLocaleString()}
                            </span>
                        </div>
                    `;
                }).join('');
            }
            document.getElementById('total-balance').innerText = `$${(10000 + inc - exp).toLocaleString()}`;
            document.getElementById('monthly-income').innerText = `+$${inc.toLocaleString()}`;
            document.getElementById('monthly-expense').innerText = `-$${exp.toLocaleString()}`;
        }

        async function callGemini(prompt) {
            const key = getStoredApiKey();
            if (!key) throw new Error("MISSING_KEY");

            const systemPrompt = `你是一位港漫風格的大師，將輸入轉為 JSON：{ "title": "品項", "amount": 數字, "category": "分類", "comment": "霸氣吐槽" }。分類：餐飲、交通、娛樂、收入、購物、其他。請確保回傳為純 JSON。`;
            const payload = { 
                contents: [{ parts: [{ text: prompt }] }], 
                systemInstruction: { parts: [{ text: systemPrompt }] }, 
                generationConfig: { responseMimeType: "application/json" } 
            };
            const url = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-09-2025:generateContent?key=${key}`;
            
            const response = await fetch(url, { method: 'POST', body: JSON.stringify(payload) });
            const result = await response.json();
            if (result.error) throw new Error(result.error.message);
            return JSON.parse(result.candidates[0].content.parts[0].text);
        }

        const chatForm = document.getElementById('chat-form');
        const chatInput = document.getElementById('chat-input');
        const chatMessages = document.getElementById('chat-messages');

        chatForm.onsubmit = async (e) => {
            e.preventDefault();
            const val = chatInput.value.trim();
            if (!val || !currentUser) return;
            
            const userMsg = document.createElement('div');
            userMsg.className = "flex justify-end animate-fadeIn";
            userMsg.innerHTML = `<div class="manhua-card bg-black text-white border-white shadow-none text-xs font-black">${val}</div>`;
            chatMessages.appendChild(userMsg);
            chatInput.value = '';
            document.getElementById('btn-icon').className = "fas fa-sync-alt spinner";

            try {
                const parsed = await callGemini(val);
                const transRef = collection(db, 'artifacts', appId, 'users', currentUser.uid, 'transactions');
                await addDoc(transRef, { ...parsed, timestamp: serverTimestamp() });
                triggerFX(parsed.amount < 0 ? '散！' : '吸！');
                
                const aiMsg = document.createElement('div');
                aiMsg.className = "flex justify-start animate-fadeIn";
                aiMsg.innerHTML = `<div class="manhua-card !mb-0 text-xs font-black">【大師】：${parsed.comment}</div>`;
                chatMessages.appendChild(aiMsg);
            } catch (err) {
                const errMsg = document.createElement('div');
                errMsg.className = "flex justify-start animate-fadeIn";
                const txt = err.message === "MISSING_KEY" ? "尚未修煉心法（API Key）！請前往江湖頁面設定。" : "心法走火入魔或網路不通！";
                errMsg.innerHTML = `<div class="manhua-card !mb-0 text-xs font-black border-red-600 text-red-600">${txt}</div>`;
                chatMessages.appendChild(errMsg);
            } finally {
                document.getElementById('btn-icon').className = "fas fa-fist-raised";
                chatMessages.scrollTo(0, chatMessages.scrollHeight);
            }
        };

        const navItems = document.querySelectorAll('.nav-item');
        const pages = document.querySelectorAll('.page');
        navItems.forEach(i => i.onclick = () => {
            pages.forEach(p => p.classList.remove('active'));
            navItems.forEach(n => n.classList.remove('active'));
            document.getElementById('page-' + i.dataset.page).classList.add('active');
            i.classList.add('active');
        });

        setInterval(() => {
            const h = new Date().getHours();
            const shifts = ["子","丑","寅","卯","辰","巳","午","未","申","酉","戌","亥"];
            document.getElementById('clock').innerText = shifts[Math.floor(h/2)] + "時";
        }, 1000);
    </script>
</body>
</html>
